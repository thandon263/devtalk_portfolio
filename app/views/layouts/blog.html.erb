<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="container">
    <%# Start of header %>
     <header class="blog-header py-3">
      <div class="container">
          <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-1"></div>
            <div class="col-4 text-center">
              <a class="blog-header-logo text-dark" href="#">Dev360 Groupe</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
            </div>
          </div>
        </div>
      </header> 
    <%# End of Header %>

      <%= render 'shared/blog_nav' %>

      <%= render 'shared/blog_mastHead' %>
      
      <%# Start of container and row element %>
        <main role="main" class="container">
          <div class="row">
      <%# End of container and row element %>

            <%= yield %>

            <%= render "shared/blog_sidebar" %>

          </div>

          <%= render 'shared/blog_footer'%>
            
            <%= source_helper("blog") %>
        </main>
      </div>
  </body>
</html>
