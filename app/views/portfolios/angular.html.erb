<h1>Angular Portfolio Items</h1>

<% @angular.each do |portfolio| %>
    <h4><%= link_to portfolio.title, portfolio_show_path(portfolio.id) %></h4>
    <h5><%= portfolio.subtitle %></h5>
    <p><%= portfolio.body %></p>
    <%= image_tag  portfolio.thumb_image unless portfolio.thumb_image.nil? %>
    <%= link_to  "Edit", edit_portfolio_path(portfolio) if logged_in?(:site_admin) %>
    <%= link_to  "Delete Portfolio Item", portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>