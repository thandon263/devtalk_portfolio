<%= form_for(@portfolio_item) do |form| %>
    <div class="row">

        <div class="col-md-4">
            <div class="form-group">
                <%= form.label :title %>
                <%= form.text_field :title, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= form.label :subtitle %>
                <%= form.text_field :subtitle, class: 'form-control' %>
            </div>
        </div>

          <div class="col-md-8">
            <div class="form-group">
                <%= form.label :body %>
                <%= form.text_area :body, class: 'form-control', rows: 13, col: 50 %>
            </div>
          </div>

    </div>

    <div class="row">

        <div class="col-md-12">

        </div>

    </div>
    
   
    <hr>
        <h2>Technologies Used: </h2>
        <div class="form-group">
            <%= form.fields_for :technologies do |technology_form| %>
                <div>
                    <%= technology_form.label :name %>
                    <%= technology_form.text_field :name, class: 'form-control' %>
                </div>
            <% end %>
        </div>

        <div class="form-group">
            <%= form.submit 'Save Portfolio Post', class: "btn btn-primary btn-block" %>
        </div>


<% end %>